{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": false,
      "jsx": "react-jsx",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "skipLibCheck": false,
      "sourceMap": true,
      "strict": true,
      "target": "ESNext",
      "types": [],
      "useDefineForClassFields": true,
  },
  "include": [
    "./src/vite-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules/",
    "vite.config.ts",
    "./src/lib/components/*/**/*.stories.tsx",
    "**.test.ts"
  ]
}